---
import Layout from '../layouts/Layout.astro';
---

<Layout title="404 - Not Found">
  <main class="container mx-auto min-h-screen flex items-center justify-center px-4">
    <div class="text-center">
      <h1 class="text-7xl sm:text-9xl font-bold mb-4 sm:mb-6 title-font">404</h1>
      <p class="text-xl sm:text-2xl mb-6 sm:mb-8">Страница није пронађен</p>
      <a href="/" class="text-lg sm:text-xl text-blue-400 hover:text-blue-300 transition-colors">
        Направите нови ледник
      </a>
    </div>
  </main>
</Layout>
